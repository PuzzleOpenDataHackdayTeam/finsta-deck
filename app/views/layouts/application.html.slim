doctype html
html
  head
    title Finsta Quartett

    = javascript_include_tag :application
    = stylesheet_link_tag :application

    // Google Font - Exo Family
    link href='http://fonts.googleapis.com/css?family=Exo:200,400,800,800italic' rel='stylesheet' type='text/css'

    meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"
    meta name="apple-mobile-web-app-capable" content="yes"
    meta name="apple-mobile-web-app-status-bar-style" content="black"

  body
    div data-role="page" id="#{action_name}"
      - if title
        div data-role="header" data-theme="c"
          h1=title
          - if action_name == 'start'
            = link_to('Menu', menu_path, class: 'ui-btn-left', data: { icon: 'bars'}) 
          -else 
            = link_to('Start', root_path, class: 'ui-btn-left', data: { icon: 'home'}) 

      - if @content_css_class
        #content data-role="content" class="#{@content_css_class}"
          = yield
      - else      
        #content data-role="content"
          = yield
